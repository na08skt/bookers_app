<div class="page-wrapper">
  <div class="message">
    <p><%= flash[:error] %></p>
  </div>
  <header>
    <h1>Editing Book</h1>
  </header>
   <%= form_with model: @book, url: book_path,  method: :patch do |f| %>
    <div class="edit-form">
      <label>title</label>
        <%= f.text_field :title %>
    </div>

    <div class="edit-form">
      <label>body</label>
        <%= f.text_area :body %>
    </div>
    <div class="edit-form">
      <%= f.submit "Update Book" %>
    </div>
    <p><%= link_to "Show", book_path(@book.id) %>|<%= link_to "Back", books_path %></p>
  <% end %>
</div>